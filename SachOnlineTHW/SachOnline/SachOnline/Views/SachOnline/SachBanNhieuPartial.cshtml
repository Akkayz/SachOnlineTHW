@model IEnumerable<SachOnline.Models.SACH>
<style>
    .text-truncate {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    .sach-item {
        margin-bottom: 20px; /* Điều chỉnh giá trị margin-bottom để tạo khoảng cách giữa các cuốn sách */
    }

    .mo-ta {
        max-height: 100px; /* Điều chỉnh chiều cao tối đa để hiển thị nhiều hơn */
        overflow: hidden;
    }
</style>
<h2 class="text-center">SÁCH BÁN NHIỀU</h2>
<div class="row">
    @foreach (var sach in Model)
    {
    <div class="col-lg-6 col-md-6 sach-item">
        <div class="media">
            <div class="media-left">
                <a href="@Url.Action("ChiTietSach","SachOnline", new { id =sach.MaSach})">
                    <img class="media-object imgsachbannhieu"
                         src="~/Images/@sach.AnhBia" alt="Bìa sách" width="150" height="200">
                </a>
            </div>
            <div class="media-body">
                <h4 style="min-height:max-content ;">
                    <a href="@Url.Action("ChiTietSach","SachOnline", new { id =sach.MaSach})">@sach.TenSach</a>

                    <p class="mo-ta">@Html.Raw(sach.MoTa)</p>
            </div>
        </div>
    </div>
    }
</div>