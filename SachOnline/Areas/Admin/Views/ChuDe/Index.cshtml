@{
    ViewBag.Title = "Index";

    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách Chủ đề</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Mã Chủ đề
        </th>
        <th>
            Tên Chủ đề
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.MaCD
            </td>
            <td>
                @item.TenChuDe
            </td>
            <td>
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaCD }) |
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaCD }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaCD })
            </td>
        </tr>
    }
</table>