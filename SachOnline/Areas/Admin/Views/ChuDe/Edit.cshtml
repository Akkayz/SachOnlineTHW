@model SachOnline.Models.CHUDE

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit Chủ đề</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.TenChuDe, "Tên chủ đề muốn sửa", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.TenChuDe, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TenChuDe, "", new { @class = "text-danger" })

        @if (!ViewData.ModelState.IsValidField("TenChuDe"))
        {
            <p class="text-danger">Vui lòng nhập tên chủ đề.</p>
        }
    </div>

    <div class="form-group">
        @Html.Label("NewTenChuDe", "Mời bạn nhập tên chủ đề", htmlAttributes: new { @class = "control-label" })
        @Html.TextBox("NewTenChuDe", null, new { @class = "form-control" })

        @if (!ViewData.ModelState.IsValidField("NewTenChuDe"))
        {
            <p class="text-danger">Vui lòng nhập tên chủ đề mới.</p>
        }
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    </div>
}