@model List<SachOnline.Models.NHAXUATBAN>

@{
    ViewBag.Title = "Danh sách Nhà Xuất Bản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách Nhà Xuất Bản</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>

<table class="table">
    <tr>
        <th>
            MaNXB
        </th>
        <th>
            TenNXB
        </th>
        <th>
            DiaChi
        </th>
        <th>
            DienThoai
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaNXB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenNXB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaNXB }) |
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaNXB }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaNXB })
            </td>
        </tr>
    }
</table>